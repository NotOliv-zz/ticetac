<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <title>Ticketac</title>
</head>

<body>
    

        <!-- HEADER -->
        <%- include('navbar'); %>

      <!-- Tableau last trip -->


      <div class="container-fluid">
        <div class="row my-3 offset-2 mt-5">
          <h2>My Last Trips:</h2>
        </div>
        
       </div>
      <div class="row justify-content-center">
        <div class="col-8">
        <table class="table table-borderless">
        <thead>
          <tr>
            <th class="p-3" scope="col">#</th>
            <th class="p-3" scope="col">Journey</th>
            <th class="p-3" scope="col">Date</th>
            <th class="p-3" scope="col">Departure time</th>
            <th class="p-3" scope="col">Price</th>
          </tr>
        </thead>
        <tbody>
          <% for (var i=0; i< lasttrips.length; i++) { %> 
          <tr>
            <th class="p-4 align-items-center" scope="row"> <%=i+1%></th>
            <td class="p-4 align-items-center"><%=lasttrips[i].departure%> / <%=lasttrips[i].arrival%>  </td>
            <td class="p-4 align-items-center"><%=dateFormat(lasttrips[i].date)%> </td>
            <td class="p-4 align-items-center"><%=lasttrips[i].departureTime%></td>
            <td class="p-4 align-items-center"><%=lasttrips[i].price%>â‚¬</td>
          </tr>
          <% } %> 
        </tbody>
      </table>
    </div>
  </div>

    <div class="row offset-9" >
      <div>
       <a href="/recherche"> <button class="btn btn-danger p-2 fs-5"> Home </button></a>
      </div>
    </div>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>